<div id="page_wrapper">
	<h1>New Events</h1>

	<%= form_for :event, url: events_path do |f| %> 
	<p>
		<%= f.label :title %><br>
		<%= f.text_field :title %>
	</p>

	<p>
		<%= f.label :event_sub %><br>
		<%= f.text_field :event_sub %>
	</p>


	<p>
		<%= f.label :conducted_on %><br>
		<%= f.date_field :conducted_on %>
	</p>

	<p>
		<%= f.label :no_of_days %><br>
		<%= f.text_field :no_of_days %>
	</p>

	<p>
		<%= f.label :ticket_charge %><br>
		<%= f.text_field :ticket_charge %>
	</p>

	<p>
		<%= f.label :total_tickets %><br>
		<%= f.text_field :total_tickets %>
	</p>

	<p>
		<%= f.label :details %><br>
		<%= f.text_area :details %>
	</p>

	<p>
		<%= f.submit %>
	</p>

	<% end %>

</div>